{
  "productName": "Eidetica",
  "name": "eidetica",
  "description": "Screenshot uploader",
  "author": {
    "name": "Trezy",
    "email": "tre@trezy.com",
    "url": "http://trezy.com"
  },
  "main": "./app/main.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:trezy/eidetica.git"
  },
  "license": "MIT",
  "dependencies": {
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-preset-env": "^1.3.3",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.24.1",
    "electron-config": "^0.2.1",
    "electron-forge": "^2.9.0",
    "electron-log": "^2.0.0",
    "electron-main-notification": "^1.0.1",
    "electron-updater": "^1.11.1"
  },
  "devDependencies": {
    "electron-prebuilt-compile": "1.6.5"
  },
  "scripts": {
    "dev": "NODE_ENV='development' yarn run start",
    "start": "electron-forge start",
    "package": "electron-forge package",
    "postinstall": "cd app && yarn install",
    "make": "electron-forge make"
  },
  "config": {
    "forge": {
      "make_targets": {
        "win32": [
          "squirrel"
        ],
        "darwin": [
          "zip"
        ],
        "linux": [
          "deb",
          "rpm"
        ]
      },
      "electronPackagerConfig": {
        "appBundleId": "eidetica",
        "appCategoryType": "public.app-category.productivity",
        "extraResource": "./app/assets",
        "icon": "./app/assets/icon",
        "osxSign": true
      },
      "electronWinstallerConfig": {
        "name": ""
      },
      "electronInstallerDebian": {},
      "electronInstallerRedhat": {},
      "github_repository": {
        "owner": "",
        "name": ""
      },
      "windowsStoreConfig": {
        "packageName": ""
      }
    }
  }
}
